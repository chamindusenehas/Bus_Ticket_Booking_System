<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busticket.controller.SeatSelectionController"
      styleClass="root-pane" spacing="0">

    <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="16">
        <Button text="← Back" styleClass="btn-back" onAction="#onBack"/>
        <Text text="Select Your Seat" styleClass="screen-title"/>
    </HBox>

    <HBox styleClass="info-banner" alignment="CENTER">
        <Label fx:id="busInfoLabel" text="" styleClass="info-banner-text"/>
    </HBox>

    <HBox alignment="CENTER" spacing="32" style="-fx-padding: 20 0 12 0;">
        <HBox alignment="CENTER" spacing="8">
            <Button text="" prefWidth="32" prefHeight="28" mouseTransparent="true"
                    style="-fx-background-color: #dcfce7; -fx-border-color: #86efac; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8;"/>
            <Label text="Available" styleClass="legend-label"/>
        </HBox>
        <HBox alignment="CENTER" spacing="8">
            <Button text="" prefWidth="32" prefHeight="28" mouseTransparent="true"
                    style="-fx-background-color: #4f46e5; -fx-border-color: #3730a3; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8;"/>
            <Label text="Selected" styleClass="legend-label"/>
        </HBox>
        <HBox alignment="CENTER" spacing="8">
            <Button text="" prefWidth="32" prefHeight="28" mouseTransparent="true"
                    style="-fx-background-color: #fee2e2; -fx-border-color: #fca5a5; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8;"/>
            <Label text="Booked" styleClass="legend-label"/>
        </HBox>
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="seat-scroll">
        <VBox alignment="CENTER" style="-fx-padding: 16 0 16 0;">
            <HBox alignment="CENTER" style="-fx-padding: 0 0 12 0;">
                <Label text="  FRONT  (Driver)" styleClass="driver-label"/>
            </HBox>
            <GridPane fx:id="seatGrid" alignment="CENTER"
                      hgap="10" vgap="10"
                      style="-fx-padding: 0 60 0 60;"/>
        </VBox>
    </ScrollPane>

    <HBox styleClass="seat-footer" alignment="CENTER_RIGHT" spacing="20">
        <Label fx:id="selectedSeatLabel" text="No seat selected"
               styleClass="selected-seat-label"/>
        <Button fx:id="proceedBtn" text="Proceed to Booking →"
                styleClass="btn-primary" onAction="#onProceed" prefWidth="220"/>
    </HBox>

</VBox>
