<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busticket.controller.CancelBookingController"
      styleClass="root-pane" spacing="0">

    <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="16">
        <Button text="← Back" styleClass="btn-back" onAction="#onBack"/>
        <Text text="Cancel Booking" styleClass="screen-title"/>
    </HBox>

    <VBox alignment="CENTER" VBox.vgrow="ALWAYS" spacing="24">

        <VBox styleClass="form-card" spacing="20" maxWidth="460" alignment="CENTER">
            <Text text="❌" style="-fx-font-size: 48;"/>
            <Text text="Cancel Your Ticket" styleClass="form-heading"/>
            <Text text="Enter your Booking ID below to cancel your reservation."
                  styleClass="card-desc" textAlignment="CENTER" wrappingWidth="380"/>

            <VBox spacing="6">
                <Label text="Booking ID" styleClass="field-label"/>
                <TextField fx:id="bookingIdField" promptText="e.g. BUS-AB12CD34"
                           styleClass="text-field" style="-fx-font-size: 15; -fx-text-fill: #1e293b;"/>
            </VBox>

            <Button text="Cancel Booking" styleClass="btn-danger"
                    onAction="#onCancel" maxWidth="Infinity"
                    style="-fx-padding: 13;"/>

            <Label fx:id="resultLabel" text="" wrapText="true"
                   style="-fx-font-size: 13;" maxWidth="380"/>
        </VBox>

    </VBox>

</VBox>
