<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busticket.controller.BookingFormController"
      styleClass="root-pane" spacing="0">

    <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="16">
        <Button text="← Back" styleClass="btn-back" onAction="#onBack"/>
        <Text text="Passenger Details" styleClass="screen-title"/>
    </HBox>

    <HBox styleClass="info-banner" alignment="CENTER">
        <Label fx:id="summaryLabel" text="" styleClass="info-banner-text"/>
    </HBox>

    <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox styleClass="form-card" spacing="20" maxWidth="480">

            <Text text="Enter Passenger Information" styleClass="form-heading"/>

            <VBox spacing="4">
                <Label text="Full Name *" styleClass="field-label"/>
                <TextField fx:id="nameField" promptText="e.g. Rahula Weerasinghe"
                           styleClass="text-field"/>
                <Label fx:id="nameError" text="" styleClass="error-label"/>
            </VBox>

            <VBox spacing="4">
                <Label text="Phone Number *" styleClass="field-label"/>
                <TextField fx:id="phoneField" promptText="10-digit mobile number"
                           styleClass="text-field"/>
                <Label fx:id="phoneError" text="" styleClass="error-label"/>
            </VBox>

            <VBox spacing="4">
                <Label text="Email Address *" styleClass="field-label"/>
                <TextField fx:id="emailField" promptText="e.g. Rahula@email.com"
                           styleClass="text-field"/>
                <Label fx:id="emailError" text="" styleClass="error-label"/>
            </VBox>

            <Button text="✓  Confirm Booking" styleClass="btn-primary"
                    onAction="#onConfirmBooking" maxWidth="Infinity"
                    style="-fx-padding: 14; -fx-font-size: 15;"/>

        </VBox>
    </VBox>

</VBox>
